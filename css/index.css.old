  html {
    height: 100%;
  }

  body {
    background-image: url("../img/background1.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-color: #cccccc;
    height: 100%;
    /*overflow: hidden;*/
  }

  table {
    text-align: left;
    margin: 0 auto;
    padding: 0 auto;
    font-family: "Courier New";
    font-size: 30px;
    margin-top: 50px;
  }

  th {
    font-size: 60px;
    text-align: center;
    /*color: white;*/
  }

  input {
    width: 55%;
    font-size: 20px;
    outline: 0;
    border-width: 0 0 2px;
    border-color: black;
    background-color: rgba(0, 0, 0, 0);
    text-align: center;
    margin-top: 50px;
  }

  img {
    width: 40px;
    height: 40px;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  div {
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 25px;
    text-align: left;
    padding: 15px;
    margin: 10px;
    color: black;
    cursor:pointer;
    width: 235px;
  }

  div:hover {
    background-color: rgba(255, 255, 255, 0.7);
  }

  .titulo {
    font-size: 30px;
    text-align: center;
  }
